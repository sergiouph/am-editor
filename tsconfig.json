{
  "exclude": ["node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "jsx": "react",
    "module": "ES6",
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build"
  }
}
